{
  "id": "calendar",
  "name": "Calendar",
  "description": "Receive and send events.",
  "dependencies": [
    {
      "type": "MAVEN",
      "id": "@project.groupId@:@project.artifactId@:@project.version@"
    }
  ],
  "configuredProperties": {
    "tokenUrl": "https://accounts.google.com/o/oauth2/token",
    "authorizationUrl": "https://accounts.google.com/o/oauth2/v2/auth",
    "authenticationType": "oauth2",
    "googleScopes": "calendar",
    "applicationName": "calendar-syndesis"
  },
  "tags": [
    "verifier"
  ],
  "properties": {
    "clientId": {
      "kind": "parameter",
      "displayName": "Client ID",
      "group": "common",
      "required": true,
      "type": "string",
      "javaType": "java.lang.String",
      "deprecated": false,
      "tags": [
        "oauth-client-id"
      ],
      "secret": false,
      "raw": true,
      "labelHint": "The client ID that Google provides when you register a client application.",
      "order": "1"
    },
    "clientSecret": {
      "kind": "parameter",
      "displayName": "Client Secret",
      "group": "common",
      "required": true,
      "type": "string",
      "javaType": "java.lang.String",
      "deprecated": false,
      "secret": true,
      "raw": true,
      "tags": [
        "oauth-client-secret"
      ],
      "labelHint": "The client secret that Google provides when you register a client application.",
      "order": "2"
    },
    "applicationName": {
      "kind": "parameter",
      "displayName": "Application Name",
      "group": "common",
      "required": true,
      "type": "string",
      "javaType": "java.lang.String",
      "deprecated": false,
      "secret": false,
      "raw": true,
      "labelHint": "A name that you choose as the name of an OAuth 2.0 Gmail client. This name appears in the Google developers account list of OAuth clients.",
      "order": "3"
    },
    "accessToken": {
      "kind": "path",
      "displayName": "Access Token",
      "group": "common",
      "required": true,
      "type": "string",
      "javaType": "java.lang.String",
      "deprecated": false,
      "tags": [
        "oauth-access-token"
      ],
      "secret": true,
      "raw": true,
      "labelHint": "String provided by Google that authorizes access to a Gmail account.",
      "order": "4"
    },
    "refreshToken": {
      "kind": "path",
      "displayName": "Refresh Token",
      "group": "common",
      "required": true,
      "type": "string",
      "javaType": "java.lang.String",
      "raw": true,
      "deprecated": false,
      "secret": true,
      "labelHint": "String provided by Google that enables retrieval of a new access token.",
      "order": "5"
    },
    "userId": {
      "kind": "parameter",
      "displayName": "User ID",
      "group": "common",
      "required": true,
      "type": "string",
      "javaType": "java.lang.String",
      "deprecated": false,
      "secret": false,
      "raw": true,
      "labelHint": "Gmail account name that is associated with this registration.",
      "order": "6"
    },
    "googleScopes": {
      "kind": "parameter",
      "displayName": "Scopes",
      "group": "common",
      "required": true,
      "type": "hidden",
      "javaType": "java.lang.String",
      "deprecated": false,
      "secret": false,
      "raw": true,
      "labelHint": "UserId",
      "tags": [
        "oauth-scope"
      ]
    },
    "tokenUrl": {
      "kind": "property",
      "displayName": "Token URL",
      "group": "security",
      "label": "security",
      "required": false,
      "type": "hidden",
      "javaType": "java.lang.String",
      "tags": [
        "oauth-access-token-url"
      ],
      "deprecated": false,
      "secret": true,
      "componentProperty": true,
      "description": "The access token"
    },
    "authorizationUrl": {
      "kind": "property",
      "displayName": "Authorization URL",
      "group": "security",
      "label": "security",
      "required": false,
      "type": "hidden",
      "javaType": "java.lang.String",
      "tags": [
        "oauth-authorization-url"
      ],
      "deprecated": false,
      "secret": true,
      "componentProperty": true,
      "description": "The access token"
    },
    "authenticationType": {
      "kind": "property",
      "displayName": "Authorization URL",
      "group": "security",
      "label": "security",
      "required": false,
      "type": "hidden",
      "javaType": "java.lang.String",
      "tags": [
        "authentication-type"
      ],
      "deprecated": false,
      "secret": true,
      "componentProperty": true,
      "description": "The access token"
    }
  },
  "actions": [
    {
      "name": "Send Event",
      "description": "Send an event from to the Calendar account that this connection is authorized to access.",
      "id": "io.syndesis:google-calendar-insert-event-connector",
      "pattern": "To",
      "actionType": "connector",
      "descriptor": {
        "componentScheme": "google-calendar",
        "inputDataShape": {
          "kind": "java",
          "type": "com.google.api.services.calendar.model.Event"
        },
        "outputDataShape": {
          "kind": "none"
        },
        "connectorCustomizers": [
          "io.syndesis.connector.calendar.GoogleCalendarSendEventCustomizer"
        ],
        "propertyDefinitionSteps": [
          {
            "name": "Send Event to Calendar",
            "description": "Specify event content and attendees and summary. ",
            "properties": {
              "summary": {
                "kind": "parameter",
                "displayName": "Summary text",
                "group": "producer",
                "label": "producer",
                "required": false,
                "type": "textarea",
                "javaType": "java.lang.String",
                "deprecated": false,
                "secret": false,
                "labelHint": "The summary of the calendar Event.",
                "order": "1"
              },
              "attendees": {
                "kind": "parameter",
                "displayName": "Email to",
                "group": "producer",
                "label": "producer",
                "required": false,
                "type": "string",
                "javaType": "java.lang.String",
                "deprecated": false,
                "secret": false,
                "labelHint": "One or more comma-separated email addresses of the attendees.",
                "order": "2"
              },
              "description": {
                "kind": "parameter",
                "displayName": "Event Description",
                "group": "producer",
                "label": "producer",
                "required": false,
                "type": "string",
                "javaType": "java.lang.String",
                "deprecated": false,
                "secret": false,
                "labelHint": "The description of the calendar Event.",
                "order": "3"
              }
            }
          }
        ]
      }
    }
  ]
}
